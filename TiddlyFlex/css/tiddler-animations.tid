}

.tc-tiddlyflex-story-river-$(column)$ .tc-tiddlyflex-story-river-inner > [data-tiddler-title="$(tiddlerTitleCSSEscaped)$"].tc-tiddler-view-frame + .tc-tiddler-view-frame, .tc-tiddlyflex-story-river-$(column)$ .tc-tiddlyflex-story-river-inner > [data-tiddler-title="$(tiddlerTitleCSSEscaped)$"].tc-tiddler-view-frame + .tc-tiddler-edit-frame, .tc-tiddlyflex-story-river-$(column)$ .tc-tiddlyflex-story-river-inner > [data-tiddler-title="$(tiddlerTitleCSSEscaped)$"].tc-tiddler-edit-frame + .tc-tiddler-view-frame, .tc-tiddlyflex-story-river-$(column)$ .tc-tiddlyflex-story-river-inner > [data-tiddler-title="$(tiddlerTitleCSSEscaped)$"].tc-tiddler-edit-frame + .tc-tiddler-edit-frame {
	-webkit-animation: margin-top-add-$(column)$-$(tiddlerTitleCSSEscaped)$ {{$:/config/AnimationDuration}}ms linear;
	-moz-animation: margin-top-add-$(column)$-$(tiddlerTitleCSSEscaped)$ {{$:/config/AnimationDuration}}ms linear;
	animation: margin-top-add-$(column)$-$(tiddlerTitleCSSEscaped)$ {{$:/config/AnimationDuration}}ms linear;
}

\end

@keyframes slide-out-left {
	from {
		transform: translateX(0%);
	}
	to {
		transform: translateX(calc(-100% - (2 * {{$:/config/tiddlyflex/story-river/padding}})));
	}
}

@keyframes slide-out-right {
	from {
		transform: translateX(0%);
	}
	to {
		transform: translateX(calc(100% + (2 * {{$:/config/tiddlyflex/story-river/padding}})));
	}
}

@keyframes slide-in-left {
	from {
		transform: translateX(calc( -100% - (2 * {{$:/config/tiddlyflex/story-river/padding}})));
	}
	to {
		transform: translateX(0%);
	}
}

@keyframes slide-in-right {
	from {
		transform: translateX(calc(100% + (2 * {{$:/config/tiddlyflex/story-river/padding}})));
	}
	to {
		transform: translateX(0%);
	}
}

<$list filter="[all[tiddlers]prefix[$:/state/tiddlyflex/removing/]]" variable="stateTiddler">
	<$let tiddlerTitle={{{ [<stateTiddler>removeprefix[$:/state/tiddlyflex/removing/]] }}} tiddlerTitleCSSEscaped={{{ [<tiddlerTitle>escapecss[]] }}} column={{{ [<stateTiddler>get[column]] }}}>

		<<tiddlyflex-dont-display-tiddler>>

		<%if [<stateTiddler>has[height]] %>
			<$let direction={{{ [<stateTiddler>get[direction]] }}} tiddlerHeight={{{ [<stateTiddler>get[height]] }}}>

				<<tiddlyflex-remove-tiddler-animation>>

			</$let>
		<% endif %>
	</$let>
</$list>
<$list filter="[all[tiddlers]prefix[$:/state/tiddlyflex/adding/]]" variable="stateTiddler">
	<$let tiddlerTitle={{{ [<stateTiddler>removeprefix[$:/state/tiddlyflex/adding/]] }}} tiddlerTitleCSSEscaped={{{ [<tiddlerTitle>escapecss[]] }}} column={{{ [<stateTiddler>get[column]] }}}>

		<<tiddlyflex-dont-display-tiddler>>

		<%if [<stateTiddler>has[height]] %>
			<$let direction={{{ [<stateTiddler>get[direction]] }}} tiddlerHeight={{{ [<stateTiddler>get[height]] }}}>

				<<tiddlyflex-add-tiddler-animation>>

			</$let>
		<% endif %>
	</$let>
</$list>
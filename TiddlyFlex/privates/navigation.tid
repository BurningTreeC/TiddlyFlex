	previousHistoryList={{{ [<tv-history-list>removesuffix<currentColumn>addsuffix<previousStoryCounter>] }}}
	firstPreviousStoryTiddler={{{ [list<previousStoryList>first[]] }}}
>
	<<actions>>
</$let>
\end